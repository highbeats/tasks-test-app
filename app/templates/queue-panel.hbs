<!-- Default panel contents -->
{{#with controller}}
  <div class="panel-heading">
    <h4>
      Tasks you {{name}} do
      &nbsp;
      <small>[<em>{{tasks.length}} things to list.</em>]</small>
    </h4>
  </div>
  <div class="panel-body">
    <ul class="list-group">
      {{#each tasks}}
        <li class='list-group-item' {{bind-attr class='done:list-group-item-success'}}>
          <div class="container-fluid">
            <div class="col-md-2">
              {{#link-to 'task' id}}
                <strong>{{id}}</strong>
              {{/link-to}}
            </div>
            <div class="col-md-2">
              <strong>{{title}}</strong>
            </div>
            <div class="col-md-5">
              <em>{{body}}</em>
            </div>
            <div class="col-md-3">
              {{input type='checkbox' checked=done class='pull-right'}}
            </div>
          </div>
        </li>
      {{/each}}
    </ul>
  </div>
{{/with}}
