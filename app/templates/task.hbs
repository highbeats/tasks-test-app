<div class="row">
  <div class="container-fluid bg-info">
    <dl>
      <dt>Number:</dt><dd>{{id}}</dd>
      <dt>Title:</dt><dd>{{title}}</dd>
      <dt>Description:</dt><dd>{{body}}</dd>
      <dt>Status</dt>
      <dd>
        {{#if done}}
          <abbr class="text-success">Complete!</abbr>
        {{else}}
          <abbr class="text-warning">In progress...</abbr>
        {{/if}}
      </dd>
    </dl>
  </div>
</div>
